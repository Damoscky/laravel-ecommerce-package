{
	"name": "sbscphp/authentication",
	"description": "Adds the authentication & user package to package.app",
	"type": "library",
	"authors": [
		{
			"name": "Software Business Solution Consulting",
			"email": "sbscphp@sbsc.net"
		}
	],
	"require": {
		"tymon/jwt-auth": "^2.0",
        "jeremykenedy/laravel-roles": "^9.1"
	},
	"autoload": {
		"psr-4": {
			"SbscPackage\\Authentication\\": "src",
			"SbscPackages\\Authentication\\Database\\": "database/"
		}
	},
	"repositories": [
		{
			"type": "vcs", 
			"url":  "git@github.com:sbscphp/authentication.git"
		}
	 ],

	"extra": {
		"laravel": {
			"providers": [
				"SbscPackage\\Authentication\\AuthenticationServiceProvider"
			]
		}
	}
}
